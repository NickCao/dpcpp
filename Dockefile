FROM centos:7
RUN yum install -y centos-release-scl epel-release
RUN yum install -y devtoolset-9 cmake3 ninja-build git
RUN ln -s /usr/bin/cmake3 /usr/bin/cmake
RUN scl enable devtoolset-9 bash

COPY DTK-21.10.tar.gz .
RUN tar xf DTK-21.10.tar.gz

RUN wget https://github.com/intel/llvm/archive/refs/heads/sycl.tar.gz
RUN tar xf sycl.tar.gz

